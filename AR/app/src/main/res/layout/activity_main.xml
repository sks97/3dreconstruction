<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/sceneform_ux_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fans"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fans2" />

            <ImageView
                android:id="@+id/blueheart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/blueheart_diffuse" />

            <ImageView
                android:id="@+id/necklace"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/necklace_stone" />

            <ImageView
                android:id="@+id/female_smiling"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/female" />

            <ImageView
                android:id="@+id/hand_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hand" />

            <ImageView
                android:id="@+id/ring_ruby"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ruby" />
        </LinearLayout>
    </HorizontalScrollView>

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/b1"
            android:layout_width="181dp"
            android:layout_height="64dp"
            android:layout_x="137dp"
            android:layout_y="618dp"
            android:onClick="clicked"
            android:text="SCAN" />
    </AbsoluteLayout>




</FrameLayout>